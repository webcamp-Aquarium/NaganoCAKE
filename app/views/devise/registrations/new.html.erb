<h3>新規会員登録</h3>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= render "customers/customer_form",f: f %>

  <div class="row field form-group form-inline">
    <span class="col-xs-3"><%= f.label :password,'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %></span>
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="row field form-group form-inline">
    <span class="col-xs-3"><%= f.label :password_confirmation,'パスワード' %> (確認用)
    </span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="actions center row">
    <%= f.submit "新規登録",class:"btn btn-success btn-default col-xs-3 col-xs-offset-4" %>
  </div>
<% end %>


<h3>既に登録済みの方</h3>

<div><%= render "devise/shared/links"-%>からログインしてください。</div>