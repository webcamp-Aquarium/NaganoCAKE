<div class="row">

<div class="col-xs-2">
  <table class="table">
    <thead>
      <tr>
        <th class="active">ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-xs-10">

  <h1>商品一覧<small>(全<%= @products.count %>件)</small></h1>

<div class="row">
<% @products.each do |product| %>

  <div class="col-xs-3">
    <%= link_to product_path(product) do %>
      <%= attachment_image_tag product, :image, :fill, 200, 150, fallback: "no_image.jpg" %></br>
      <%= product.name %></br>
      ¥<%= product.price %>
    <% end %>
  </div>

<% end %>
</div>

</div>


</div>