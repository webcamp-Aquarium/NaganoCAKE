<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= render 'genre',genres: @genres %>

    <div class="col-xs-10">

      <div class="row">
        <%= attachment_image_tag(@product, :image, :fill, 500, 300, fallback: "no_image.jpg",class:"col-xs-8") %>
        <div class="col-xs-4">
          <h2><strong><%= @product.name %></strong></h2>
          <%= @product.description %></br>
          <h3>¥<%= tax_in_price(@product) %>(税込)</h3>
        </div>
      </div>

      <div class="row pull-right form-group form-inline">
        <%= form_for @cart_item,url: cart_items_path(product_id: @product.id),method: :post,html: {class:"form-inline"} do |f| %>
         <%= f.select :number, [1,2,3,4,5,6,7,8,9],{},{class:"form-control"} %>
         <%= f.submit 'カートに入れる',class:"btn btn-primary" %>
        <% end %>
      </div>

    </div>
  </div>
</div>