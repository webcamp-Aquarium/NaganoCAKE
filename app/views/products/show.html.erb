<div class="row">

<div class="col-xs-2">
  <table class="table">
    <thead>
      <tr>
        <th>ジャンル検索</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-xs-10">

  <div class="row">
    <div class="col-xs-5 col-xs-offset-1">
      <%= attachment_image_tag(@product, :image_id, :fill, 500, 300, fallback: "no_image.jpg") %>
    </div>
    <div class="col-xs-6">
      <h2><%= @product.name %></h2>
      <%= @product.description %></br>
      <h3>¥<%= tax_in_price(@product) %>(税込)</h3>
    </div>
  </div>

</div>


</div>