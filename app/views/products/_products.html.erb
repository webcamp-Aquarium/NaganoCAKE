<div class="row">
<% products.each do |product| %>

  <div class="col-xs-4 product-info">
    <%= link_to product_path(product) do %>
      <%= attachment_image_tag product, :image, :fill, 190, 150, fallback: "no_image.jpg" %></br>
      <h4><%= product.name %></h4>
      ¥<%= product.price %>
    <% end %>
  </div>

<% end %>

<div class="pull-right"><%= link_to 'もっと見る>',products_path %></div>

</div>
