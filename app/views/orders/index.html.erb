<h2>注文履歴一覧</h2>

<table class="table table-bordered row">
	<thead>
		<tr class="active">
			<th>注文日</th>
			<th class="col-md-5">配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>

	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
			<td><%= order.postal_code %><br>
				<%= order.address %><br>
				<%= order.name %></td>
			<td><% order.order_details.each do |order_detail| %>
			<%= order_detail.product.name %><br>
			<% end %></td>
			<td><%= (order.total_fee + order.delivery_fee).to_s(:delimited) %></td>
			<td><%= order.status %></td>
			<td><%=link_to "表示する", order_path(order), class: "btn btn-primary center-block" %></td>
		</tr>
		<% end %>
	</tbody>

</table>