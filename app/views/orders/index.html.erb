<h3>注文履歴一覧</h3>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>

	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at %></td>
			<td><%= order.postal_code %><br>
				<%= order.address %><br>
				<%= order.name %></td>
			<td><%= find_product_name(order) %></td>
			<td><%= order.total_fee %></td>
			<td><%= order.is_status %></td>
			<td><%=link_to "表示する", orders_path(order), class: "btn btn-primary" %></td>
		</tr>
		<% end %>
	</tbody>

</table>