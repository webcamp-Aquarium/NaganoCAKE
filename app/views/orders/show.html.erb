<h2>注文履歴詳細</h2>

<div class= "row">
  <div class="col-xs-8">
    <table class="table table-bordered">
      <caption>注文情報</caption>
      <thead>
        <div class="row">
          <tr>
            <th class="active col-md-3">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="active">配送先</th>
            <td><%= @order.postal_code %><br>
  								<%= @order.address %><br>
  								<%= @order.name %></td>
          </tr>
          <tr>
            <th class="active">支払方法</th>
            <td><%= @order.payment %></td>
          </tr>
          <tr>
            <th class="active">ステータス</th>
            <td><%= @order.status %></td>
          </tr>
        </div>
      </thead>
    </table>
  </div>

  <div class="col-xs-3">
    <table class="table table-bordered">
      <caption>請求情報</caption>
      <thead>
          <tr>
            <th class="active">商品合計</th>
            <td><%= @order.total_fee.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="active">配送料</th>
            <td><%= @order.delivery_fee.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="active">ご請求額</th>
            <td><%= (@order.total_fee + @order.delivery_fee).to_s(:delimited) %></td>
          </tr>
      </thead>
    </table>
  </div>

</div>
<div class="row">
  <div class="col-xs-8">
    <table class="table table-bordered">
      <caption>注文内容</caption>
    	<thead>
        <tr class="active">
          <div class="row">
          <th>商品</th>
          <th>単価</th>
          <th>個数</th>
          <th>小計</th>
          </div>
        </tr>
      </thead>
    	<tbody>
    		<% (@order.order_details).each do |order_detail| %>
    		<tr>
      		<td><%= order_detail.product.name %></td>
      		<td><%= (order_detail.price*1.1).round %></td>
      		<td><%= order_detail.number %></td>
      		<td><%= (order_detail.price*1.1*order_detail.number).round.to_s(:delimited) %></td>
    		</tr>
    		<% end %>
    	</tbody>
    </table>
  </div>
</div>