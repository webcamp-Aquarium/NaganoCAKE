<h2>会員情報編集</h2>

<%= form_for(@customer) do |f| %>
  <%= render "devise/shared/error_messages", resource: @customer %>
<div class="row">
  <div class="field">
    <span class="col-xs-3">名前</span>
    <span class="col-xs-9">
      <%= f.label '(姓)' %>
      <%= f.text_field :family_name_kanji, autofocus: true, autocomplete: "family_name_kanji" %>
      <%= f.label '(名)' %>
      <%= f.text_field :first_name_kanji, autofocus: true, autocomplete: "first_name_kanji" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-3">フリガナ</span>
    <span class="col-xs-9">
      <%= f.label '(セイ)' %>
      <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
      <%= f.label '(メイ)' %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-3">メールアドレス</span>
    <span class="col-xs-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-3">郵便番号(ハイフンなし)</span>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-3">住所</span>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-3">電話番号(ハイフンなし)</span>
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>
</div>


  <div class="actions row">
    <%= f.submit "編集内容を保存する",class:"btn btn-primary btn-default col-xs-3 col-xs-offset-2" %>
    <%= link_to "退会する","/customers/#{@customer.id}/hide" ,method: :patch,class: "btn btn-danger col-xs-offset-2" %>
  </div>

<% end %>

