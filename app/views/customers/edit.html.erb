<h3>登録情報編集</h3>


<%= form_for(@customer) do |f| %>

  <%= render "devise/shared/error_messages", resource: @customer %>

  <%= render "customer_form",f: f %>

  <div class="actions row">
    <%= f.submit "編集内容を保存する",class:"btn btn-primary btn-default col-xs-3 col-xs-offset-2" %>
    <%= link_to "退会する","/customers/#{@customer.id}/leave" ,class: "btn btn-danger col-xs-offset-2" %>
  </div>

<% end %>

