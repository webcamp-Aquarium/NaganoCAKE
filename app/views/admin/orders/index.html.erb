<h3>注文履歴一覧</h3>

<table class= "table table-bordered">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"),admin_order_path(order) %></td>
			<td><%= kanji_full_name(order.customer) %></td>
			<td><%= total_number(order.order_details) %></td>
			<td><%= order.status %></td>
		</tr>
		<% end %>
	</tbody>
</table>