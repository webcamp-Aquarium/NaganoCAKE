<h2>注文履歴一覧</h2>

<div class="row">
  <div class="col-xs-9">
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
         <th><%= link_to order.created_at, orders_path(@order) %></th>
         <th><%= order.customer %></th>
         <th><%= order.number %></th>
         <th><%= order.status %></th>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>             