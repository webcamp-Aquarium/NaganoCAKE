<div class="row">
<h2>注文履歴詳細</h2>
<h4>購入者</h4>
<%= link_to @order.customer.name, customers_path(@cutomer) %>
<h4>配送先</h4>
<%= @order.customer.address %>
<h4>支払い方法</h4>
<%=  @order.cutomer.payment %>
<h4>注文ステータス</h4>
<%= form_for @order do |f| %>
<%= f.select :is_status, [["入金待ち","入金待ち"], ["入金確認","入金確認"]["製作中","製作中"]["発送準備中","発送準備中"]["発送済み","発送済み"]] %>
<%= f.submit '更新',class: 'btn btn-primary'%>
<% end %>
<table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    	<%= @products.each do |product| %>
    	<tr>
    		<th><%= order.product.name %></th>
    		<th><%= order.tax_in_price(@product) %></th>
    		<th><%= order.order_details.nember %></th>
    		<th><%= tax_in_price(ci.product) %></th>
    		<%= form_for @order_detail do |f| %>
    		<th><%= f.select :production_status, [["着手不可","着手不可"], ["製作待ち","製作待ち"]["製作中","製作中"]["製作完了","製作完了"]] %></th>
    			<th><%= f.submit '更新',class: 'btn btn-primary'%></th>
    	    <% end %>
    	<% end %>
        </tr>
    </tbody>
</table>        	    	    		
   <h4>商品合計</h4>
   <%= order.product.total_fee %>円
   <h4>送料</h4>
   <%= order.delivery_fee %>円
   <h4>請求金額合計</h4>
   <%= total_fee(@cart_items) %>円
</div>   



