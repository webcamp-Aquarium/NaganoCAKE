  <div class="row">
  	<div class="col-xs-4">
    <h2>商品詳細</h2>
        <%= attachment_image_tag @product, :image, format: 'jpeg', size: "100x100" %>
  </div>
  <div class="col-xs-4">
    <h4>商品名</h4>
        <%= @product.name %>
    <h4>商品説明</h4>
        <%= @product.description %>
    <h4>ジャンル</h4>
        <%= @product.genre.name %>
    <h4>税込価格（税抜価格）</h4>
        <%= tax_in_price(@product) %>
        (<%= @product.price %>)円

    <h4>販売ステータス</h4>
        <%= @product.is_status %>
    </div>
    <div class="col-xs-4">
    <div class="productshow">     
     <%= link_to '編集する', edit_admin_product_path(@product), class: 'btn btn-success' %>
    </div>
    </div>              

