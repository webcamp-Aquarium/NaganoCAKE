
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="row">
    	<h2 class="col-md-6">商品一覧</h2>
      <div class="productnew col-md-3">
      　　<%= link_to "+", new_admin_product_path, class: 'btn btn-default btn-lg pull-right' %>
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
       　　<th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
    	 <% @products.each do |product| %>
    	 <tr>
    	 	<td><%= product.id %></td>
    	 	<td><%= link_to product.name,admin_product_path(product.id) %></td>
    	 	<td><%= product.price %></td>
    	 	<td><%= product.genre.name %></td>
    	 	<td><%= product.is_status %></td>
    	 </tr>
    	 <% end %>
       <%= paginate @products %>
      </tbody>
    </table>

  </div>
</div>