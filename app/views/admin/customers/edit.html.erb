<h2>会員情報編集</h2>

<%= form_for @customer,url: admin_customer_path(@customer) do |f| %>
  <%= render "devise/shared/error_messages", resource: @customer %>
<div class="row">
  <div class="field">
    <span class="col-xs-2">名前</span>
    <span class="col-xs-9">
      <%= f.label '(姓)' %>
      <%= f.text_field :family_name_kanji, autofocus: true, autocomplete: "family_name_kanji" %>
      <%= f.label '(名)' %>
      <%= f.text_field :first_name_kanji, autofocus: true, autocomplete: "first_name_kanji" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-2">フリガナ</span>
    <span class="col-xs-9">
      <%= f.label '(セイ)' %>
      <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
      <%= f.label '(メイ)' %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-2">郵便番号(ハイフンなし)</span>
    <span class="col-xs-9">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-2">住所</span>
    <span class="col-xs-9">
    <%= f.text_field :address, autofocus: true,:size=>"50", autocomplete: "address" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-2">電話番号(ハイフンなし)</span>
    <span class="col-xs-9">
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-2">メールアドレス</span>
    <span class="col-xs-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </span>
  </div>
</div>

<div class="row">
  <div class="field">
    <span class="col-xs-2">会員ステータス</span>
      <lavel><%= f.radio_button :is_status, "有効" %>有効</lavel>
      <lavel><%= f.radio_button :is_status, "退会済" %>退会済</lavel>
  </div>
</div>

  <div class="actions row">
    <%= f.submit "変更を保存する",class:"btn btn-primary col-xs-1.5" %>
  </div>

<% end %>

