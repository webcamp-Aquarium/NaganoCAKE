<h2>会員情報編集</h2>

<%= form_for @customer,url: admin_customer_path(@customer) do |f| %>
  <%= render "devise/shared/error_messages", resource: @customer %>

  <%= render "customers/customer_form", f: f %>

  <div class="row field form-group form-inline">
    <span class="col-xs-3"><strong>会員ステータス</strong></span>
      <lavel><%= f.radio_button :is_status, "有効" %>有効</lavel>
      <lavel><%= f.radio_button :is_status, "退会済" %>退会済</lavel>
  </div>

  <div class="actions row">
    <%= f.submit "変更を保存する",class:"btn btn-primary col-xs-2 col-xs-offset-1" %>
  </div>

<% end %>

