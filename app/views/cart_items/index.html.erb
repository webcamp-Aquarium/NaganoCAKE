
<% if @cart_items.blank? %>

<div class="center">
  <h3><%= kana_full_name(current_customer) %>さんのカートにはまだ何も追加されていません。</h3>
  <%= link_to '買い物を続ける',products_path,class:"btn btn-primary col-md-2 col-md-offset-5" %>
</div>

<% else %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">

    <div class="row">
      <h3>ショッピングカート
      <%= link_to 'カートを空にする',cart_items_path,method: :delete, class:"btn btn-danger pull-right" %></h3>
    </div>


          <div id="cart-customer<%= current_customer.id %>">
            <%= render 'cart_items/cart_item',cart_items: @cart_items %>
          </div>

    <div class="row">
      <%= link_to '買い物を続ける',root_path,class:"btn btn-primary col-md-2" %>
      <span class="pull-right col-md-4">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <div class="row">
                <th class="active col-md-6 total-fee">合計金額</th>
                <td class="total-fee" id="cart-fee"><%= total_fee(@cart_items).to_s(:delimited) %></td>
              </div>
            </tr>
          </tbody>
        </table>
      </span>
    </div>

    <div class="row center-block">
      <%= link_to '情報入力に進む',new_order_path,class:"btn btn-success btn-lg col-md-4 col-md-offset-4" %>
    </div>

  </div>
</div>

<% end %>