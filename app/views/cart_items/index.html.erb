
<% if @cart_items.blank? %>

<div class="center">
  <h3><%= kana_full_name(current_customer) %>さんのカートにはまだ何も追加されていません。</h3>
  <%= link_to '買い物を続ける',products_path,class:"btn btn-primary col-md-2 col-md-offset-5" %>
</div>

<% else %>

<div class="row">
  <h2>ショッピングカート
  <%= link_to 'カートを空にする',cart_items_path,method: :delete, class:"btn btn-danger pull-right" %></h2>
</div>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |ci| %>
    <tr>
      <td><%= attachment_image_tag(ci.product, :image, :fill, 30,20, fallback: "no_image.jpg") %><%= ci.product.name %></td>
      <td><%= tax_in_price(ci.product) %></td>
      <td>
        <%= form_for ci,url: cart_item_path(ci) do |f| %>
          <%= f.number_field :number,class: "",min: 1,max: 9 %>
          <%= f.submit '変更', class:"btn btn-primary" %>
        <% end %>
      </td>
      <td><%= (tax_in_price(ci.product)*ci.number).to_s(:delimited) %></td>
      <td><%= link_to '削除する',cart_item_path(ci), method: :delete, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <%= link_to '買い物を続ける',products_path,class:"btn btn-primary col-md-2" %>
  <span class=" pull-right col-md-3">
    <table class="table">
      <tbody>
        <tr>
          <td>合計金額</td>
          <td><%= total_fee(@cart_items).to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
  </span>
</div>

<div class="row center-block">
  <%= link_to '情報入力に進む',new_order_path,class:"btn btn-success btn-lg col-md-4 col-md-offset-4" %>
</div>

<% end %>